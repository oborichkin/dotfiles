general {
	output_format = "i3bar"
	colors = true
	separator = ""
	interval = 5
}

order += "ethernet wlp3s0"
order += "path_exists 🔒"
order += "cpu_temperature 0"
# order += "read_file BRIGHTNESS"
order += "disk /"
order += "disk /var"
order += "battery 0"
order += "tztime local"

disk "/" {
        format = " / %free"
}

disk "/var" {
	format = " /var %free"
}

ethernet enp8s0 {
	format_up = "🌐: %ip (%speed) "
	format_down = "🌐: down "
}

path_exists 🔒 {
	path = "/proc/sys/net/ipv4/conf/tun0"
}

disk "/" {
        format = " / %free"
}

disk "/home" {
	format = " /home %free"
}

disk "/var" {
	format = " /var %free"
}

tztime local {
        format = "  🕓 %H:%M %d.%m.%Y  "
}

read_file BRIGHTNESS {
	format = "  ☀️ %content%"
	path = "/home/pavel/.cache/brightness"
	max_characters = 2
}

battery 0 {
        format = "  %status %percentage %remaining"
        format_down = "No battery"
        status_chr = "⚡ CHR"
        status_bat = "🔋 BAT"
        status_unk = "? UNK"
        status_full = "⚡FULL"
        path = "/sys/class/power_supply/BAT%d/uevent"
        low_threshold = 10
	last_full_capacity = true
	integer_battery_capacity = true
}

cpu_temperature 0 {
        format = "  CPU🌡️ %degrees °C"
        path = "/sys/devices/platform/coretemp.0/hwmon/hwmon4/temp1_input"
}