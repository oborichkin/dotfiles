general {
	output_format = "i3bar"
	colors = true
	separator = ""
	interval = 5
}

# order += "ethernet enp0s25"
# order += "path_exists 🔒"
order += "battery 0"
# order += "disk /"
# order += "disk /home"
# order += "disk /var"
order += "tztime local"

ethernet enp0s25 {
	format_up = "🌐: %ip (%speed) "
	format_down = "🌐: down "
}

path_exists 🔒 {
	path = "/proc/sys/net/ipv4/conf/tun0"
}

battery 0 {
        format = "🔋 %percentage"
	last_full_capacity = true
	integer_battery_capacity = true
}

disk "/" {
        format = " / %free"
}

disk "/home" {
	format = " /home %free"
}

disk "/var" {
	format = " /var %free"
}

tztime local {
        format = "  🕓 %H:%M %d.%m.%Y  "
}

