general {
	output_format = "i3bar"
	colors = true
	separator = ""
	interval = 5
}

order += "ethernet enp8s0"
order += "path_exists 🔒"
# order += "disk /"
# order += "disk /home"
# order += "disk /var"
order += "tztime local"

ethernet enp8s0 {
	format_up = "🌐: %ip (%speed) "
	format_down = "🌐: down "
}

path_exists 🔒 {
	path = "/proc/sys/net/ipv4/conf/tun0"
}

disk "/" {
        format = " / %free"
}

disk "/home" {
	format = " /home %free"
}

disk "/var" {
	format = " /var %free"
}

tztime local {
        format = "  🕓 %H:%M %d.%m.%Y  "
}

