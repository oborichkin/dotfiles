alias tmuxconf="vim ~/.config/tmux/tmux.conf"
alias i3conf="vim ~/.config/i3/config"
alias i3confstat="vim ~/.config/i3status/config"
alias vimconf="vim ~/.config/nvim/init.vim"
alias zshconf="vim ~/.config/zsh/.zshrc"

alias ss="sudo systemctl"
alias dc="docker compose"
alias dc-build="docker compose build --no-cache"
alias p="sudo pacman"
alias ll="ls -lah"
alias copy="xclip -sel clip"
alias vim="nvim"
alias start-vpn="sudo systemctl start openvpn-client@protei"
alias stop-vpn="sudo systemctl stop openvpn-client@protei"

alias nvidia-settings="nvidia-settings --config=$XDG_CONFIG_HOME/nvidia/settings"

alias dotfiles="git --git-dir=$XDG_DATA_HOME/dotfiles --work-tree=$HOME"
